<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Mark's Tech Blog</title>
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.1.3/flatly/bootstrap.min.css'
    />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <div class='wrapper'>
      <header class='container'>
        <div class='row bg-light'>
          <div class='col-12'>
            <h1 class='text-center'>
              <a href='/'>Mark's Tech Blog</a>
            </h1>
            <div class='container'>
              <nav class='row'>
                <div class='col text-center'>
                  <h2>
                    <a href='/'>Homepage</a>
                  </h2>
                </div>
                <div class='col text-center'>
                  <h2>
                    <a href='/dashboard'>Dashboard</a>
                  </h2>
                </div>
                {{#if loggedIn}}
                  <div class='col text-center'>
                    <h2>
                      <button id='logout' class='btn-no-style'>Logout</button>
                    </h2>
                  </div>
                {{else}}
                  <div class='col text-center'>
                    <h2>
                      <a href='/login'>Login</a>
                    </h2>
                  </div>
                {{/if}}
              </nav>
            </div>
          </div>
        </div>
      </header>

      <main>
        {{{body}}}
      </main>
      {{! <footer class='bg-info text-white text-center'>
        &copy;2022 Mark Elliott All Rights Reserved
      </footer> }}
      {{#if loggedIn}}
        <script src='/javascript/logout.js'></script>
      {{/if}}
    </div>
  </body>

</html>